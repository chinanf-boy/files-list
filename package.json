{
  "name": "files-list",
  "version": "1.0.0",
  "description": "get path dir/child all file path",
  "license": "MIT",
  "main": "dist/files-list.js",
  "module": "dist/files-list.m.js",
  "repository": "chinanf-boy/files-list",
  "author": {
    "name": "chinanf-boy",
    "email": "865501259@qq.com",
    "url": "http://llever.com"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "npm run build && nyc ava -v",
    "build": "microbundle build files-list.js",
    "precommit": "lint-staged",
    "pub": "npm run test && npm run npmUp && npm run git",
    "npmUp": "npm version major && npm publish",
    "git": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "size-limit": [
    {
      "path": "dist/files-list.js",
      "gzip": false
    }
  ],
  "lint-staged": {
    "linters": {
      "*.{js,json,css,md}": [
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.js"
    ]
  },
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    ""
  ],
  "dependencies": {
    "mz": "^2.7.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.0.2",
    "husky": "1.0.0-rc.13",
    "lint-staged": "^7.0.0",
    "microbundle": "^0.4.4",
    "nyc": "^11.8.0",
    "prettier": "*"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
